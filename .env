# Production Environment Variables
# Copy this file to .env and update the values

# IMPORTANT: Change this to a random secret key in production!
FLASK_SECRET_KEY=your-super-secret-random-key-change-this-in-production

# Base URL for your deployed server (used in download links)
# Update this to your actual domain
BASE_URL=https://your-domain.com

# Flask environment
FLASK_ENV=production
FLASK_DEBUG=False

# Optional: Custom port (defaults to 8000 in container)
# PORT=8000

# Optional: Custom upload limits
# MAX_CONTENT_LENGTH=5368709120  # 5GB in bytes

# Example production values:
# BASE_URL=https://updates.nerdscorp.com
# FLASK_SECRET_KEY=super-random-secret-key-generated-by-secrets-token-urlsafe
